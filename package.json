{
  "name": "stylelint-value-no-unknown-custom-properties",
  "version": "4.0.0",
  "description": "A stylelint rule to disallow usage of unknown custom properties",
  "author": "Jonathan Neal <jonathantneal@hotmail.com>",
  "license": "CC0-1.0",
  "repository": "csstools/stylelint-value-no-unknown-custom-properties",
  "homepage": "https://github.com/csstools/stylelint-value-no-unknown-custom-properties#readme",
  "bugs": "https://github.com/csstools/stylelint-value-no-unknown-custom-properties/issues",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md",
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm test",
    "pretest": "rollup -c .rollup.mjs --silent",
    "test": "npm run test:js && npm run test:jest",
    "test:js": "eslint src/*.js --cache --ignore-path .gitignore --quiet",
    "test:jest": "jest"
  },
  "engines": {
    "node": "^16 || ^18 || ^20"
  },
  "dependencies": {
    "postcss-value-parser": "^4.2.0",
    "resolve": "^1.22.8"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/eslint-parser": "^7.22.15",
    "@babel/plugin-transform-runtime": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@rollup/plugin-babel": "^6.0.4",
    "eslint": "^8.53.0",
    "eslint-config-dev": "^3.3.1",
    "jest": "^29.7.0",
    "jest-preset-stylelint": "^6.3.2",
    "rollup": "^4.3.0",
    "stylelint": "^15.11.0"
  },
  "peerDependencies": {
    "stylelint": "10 - 15"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "semi": [
        "error",
        "always"
      ],
      "curly": "error",
      "brace-style": "error",
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "radix": "error"
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "root": true
  },
  "jest": {
    "preset": "jest-preset-stylelint"
  },
  "keywords": [
    "stylelint",
    "stylelint-plugin",
    "css",
    "custom",
    "properties",
    "property",
    "variables",
    "variable",
    "vars",
    "var",
    "csswg",
    "w3c",
    "unknown"
  ]
}
